            <property name="hibernate.connection.username" value="tournament_usr"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.password" value="schwabencup"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/tournament"/>
